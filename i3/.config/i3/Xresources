! Source: https://wiki.archlinux.org/title/X_resources

! The formula to calculate the default font size based on DPI is:
! font_size = base_font_size * (Xft.dpi / 96)

! The commom font size is 12pt

! 100%
!Xft.dpi = (15 / 12) * 96 = 120
Xft.dpi: 96

! 125%
!Xft.dpi = (15 / 12) * 96 = 120
! Xft.dpi: 120

! 150%
! font_size = (18 / 12) * 96
! Xft.dpi: 144


! Remember to update your settings
! xrdb -merge ~/.Xresources

! ----------------------------------------------------
Xcursor.size: 48
