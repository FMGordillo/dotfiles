# Update time every 5 seconds
[time]
command=date +%T
interval=5

[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

[cpu_temp]
command=cat /sys/class/thermal/thermal_zone5/temp | awk '{print $1/1000 "ÂºC"}'
interval=5

[battery]
command=cat /sys/class/power_supply/BAT0/uevent | grep CAPACITY_LEVEL | awk -F '=' '{print($2)}'
interval=5
